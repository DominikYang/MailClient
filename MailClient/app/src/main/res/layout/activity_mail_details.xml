<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MailDetailsActivity">
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/mail_details_appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/mail_details_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/mail_details_appbar"
            android:id="@+id/mail_from"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_below="@id/mail_from"
            android:layout_height="50dp"
            android:id="@+id/mail_to"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/mail_to"
            android:id="@+id/mail_subject"
    />

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mail_subject">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/content"
        />
    </RelativeLayout>


</RelativeLayout>