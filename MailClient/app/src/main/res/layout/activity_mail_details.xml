<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MailDetailsActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:id="@+id/layout_from"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="发件人："
                  android:textSize="25sp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mail_from"
                android:textSize="25sp"
        />
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_below="@id/layout_from"
                  android:id="@+id/layout_to">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="收件人："
                  android:textSize="25sp"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_below="@id/mail_from"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/mail_to"
        />
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_below="@id/layout_to"
                  android:id="@+id/layout_subject">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="主题："
                  android:textSize="25sp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mail_subject"
                android:textSize="25sp"
        />
    </LinearLayout>

    <TextView
            android:layout_below="@+id/layout_subject"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mail_content"
    />

</RelativeLayout>