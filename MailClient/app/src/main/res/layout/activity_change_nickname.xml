<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChangeNicknameActivity">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/change_nick">
        <EditText android:layout_width="350dp"
                  android:layout_height="50dp"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="320dp"
                  android:id="@+id/new_nickname"
                  android:hint="输入新昵称"
        />
        <Button android:layout_width="350dp"
                android:layout_below="@id/new_nickname"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:id="@+id/nickname_submit"
                android:text="提交"/>
    </RelativeLayout>
</RelativeLayout>
