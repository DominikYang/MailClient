<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingActivity">
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/setting_appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/setting_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView android:layout_width="match_parent"
              android:layout_height="200dp"
              android:id="@+id/setting_name_view"
              />

    <Button
            android:layout_below="@+id/setting_name_view"
            android:id="@+id/setting_change_nickname"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:text="修改昵称"
            />

    <Button
            android:layout_below="@+id/setting_change_nickname"
            android:id="@+id/setting_change_password"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:text="修改密码"
    />

    <Button
            android:layout_below="@+id/setting_change_password"
            android:id="@+id/setting_add_mail_account"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:text="添加邮箱"
    />

    <Button
            android:layout_below="@+id/setting_add_mail_account"
            android:id="@+id/logout"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            android:text="退出登录"
    />




</RelativeLayout>